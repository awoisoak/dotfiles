[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
    algorithm = histogram

[alias]
	st = status
	lol = log --oneline --graph --all
    amend = "!f() { \
	    git add -A && \
	    if [ -n \"$1\" ]; then \
	      git commit --amend -m \"$1\"; \
	    else \
	      git commit --amend; \
	    fi && \
	    git push -f; \
	  }; f"
	amend-no-verify = "!f() { \
	    git add -A && \
	    if [ -n \"$1\" ]; then \
	      git commit --amend --no-verify -m \"$1\"; \
	    else \
	      git commit --amend --no-verify; \
	    fi && \
	    git push -f; \
	  }; f"
